<%- include('partials/header') %>
<%- include('partials/navbar') %>
  <h1 class="text-center display-4 my-5">Sign In</h1>
  <% if (loginMessage) { %>

    <p class="text-center"><strong class="text-danger"><%= loginMessage %></strong></p>

  <% } %>
  <div class="container container-fluid mb-5">
    <form method="POST">
      <div class="mb-3">
        <label for="email" class="form-label">Email address</label>
        <input type="email" class="form-control" id="email" name="email" required>
      </div>
      <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <input type="password" class="form-control" id="password" name="password" required>
      </div>
      <button type="submit" class="btn btn-primary me-2">Sign In</button>
      <a href="/signUp" class="btn btn-secondary">Sign Up</a>
    </form>
  </div>

<%- include('partials/footer') %>